<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealEstateMAUIApp.Payment">
    <VerticalStackLayout Spacing="5" MinimumHeightRequest="145">
        <Picker x:Name="PaymentPicker" SelectedIndexChanged="PaymentIndexTypeChanged" />
        <Entry x:Name="Amount" Placeholder="Amount" />
        <Entry x:Name="txtPayment1" Placeholder="txtPayment1" />
        <Entry x:Name="txtPayment2" Placeholder="txtPayment1" />
    </VerticalStackLayout>
</ContentView>
