<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealEstateMAUIApp.ExistingsEstates">

    <VerticalStackLayout MaximumWidthRequest="900">
        <Label 
                    Text="Existing Estates"
                    VerticalOptions="Center" 
                    FontSize="Small" />
        <HorizontalStackLayout Spacing="5" Padding="5">
            <ListView x:Name="EstateCollection"
                      SelectionMode="Single"
                      CachingStrategy="RecycleElement"
                      HasUnevenRows="False"
                      SeparatorVisibility="None"
                      ItemSelected="OnEstateSelectionChanged"
                      Margin="5,5,5,5">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="32">
                            <Label Text="{Binding .}" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <VerticalStackLayout x:Name="EstateDetails" />

        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
